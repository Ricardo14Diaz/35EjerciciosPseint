	escribir "ingrese el primer valor"
	leer num1
	escribir "ingrese el segundo valor"
	leer num2
	
	si num1 = num2 entonces 
		escribir "el valor ",num1," y ",num2," son iguales"
	sino 
		si num1 < num2 Entonces
			escribir num1," es menor a ",num2
		SiNo
			escribir "es mayor"
		FinSi
	FinSi
	
	
FinFuncion
