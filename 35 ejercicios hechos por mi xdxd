//1)Leer un carácter y deducir si está o no comprendido entre las
//letras 'a'... 'z' y 'A'...'Z' ambas inclusive y sino verificar si es un signo de puntuacion ", . ; :"
//y si no presentar solo el caracter.
funcion ejercicio1() 
	definir car Como Caracter
	escribir "ingrese el caracter"
	leer car
	si car>= "a" y car <= "z" Entonces
		escribir "el caracter: ",car," esta entre a y z"
	sino 
		si car ="," Entonces
			escribir car," es signo de puntuacion"
		sino 
			si car = "." entonces 
				escribir car," es signo de puntuacion"
			sino 
				si car = ";" Entonces
					escribir car," es signo de puntuacion"
				sino 
					si car = ":" entonces 
						escribir car," es signo de puntuacion"
					sino 
						escribir "ninguno de los anteriores"
					FinSi
				FinSi
			finsi	
		FinSi	
	FinSi
FinFuncion

funcion ejercicio2()
	//	2)Leer un carácter y deducir si este es un numero(0..9) o una vocal(a,e,i,o,u)
	//entrada: car 
	//proceso: si car es mayor o igual a 0 Y car es menor o igual a 9 
	// escribir "es numero"
	// sino 
	//si car es igual a "a" 
	//escribir "es vocal"
	definir car Como Caracter
	escribir "ingrese el caracter"
	leer car
	si car >= "0" y car <= "9" 
		escribir car," es un numero"
	sino 
		si car = "a"
			escribir car," es vocal"
		sino 
			si car = "e" 
				escribir car," es vocal"
			sino 
				si car = "i" entonces
					escribir car," es vocal"
				sino 
					si car = "o"
						escribir car," es vocal"
					sino 
						si car = "u"
							escribir car," es vocal"
						SiNo
							escribir "fuera de rango o caracter incorrecto"
						FinSi
					FinSi
				FinSi
			FinSi
		FinSi
	FinSi
	
FinFuncion

funcion ejercicio3()
	//3) Dado un caracter vocal presentar su respectivo valor ascii
	// entrada: leer el caracter que sea vocal (mayuscula y minuscula en codigo ascii
	// presentar los valores
	//
	definir car Como Caracter
	escribir "ingrese la vocal"
	leer car
	
	
	segun car Hacer
		"a":
			escribir "97"
		"e":
			escribir "101"
		"i":
			escribir "105"
		"o":
			escribir "111"
		"u":
			escribir "117"
		"ª":
			escribir "0170"
		//mayusculas	
		"A":
			escribir"65"
		"E":
			escribir "69"
		"I":
			escribir "73"
		"O":
			escribir "79"
		"U":
			escribir "85"
		De Otro Modo:
			escribir "no es vocal sonzo dxxdd"	
	FinSegun
FinFuncion

funcion ejercicio4()
	//Leer dos nombres y verificar si estos son iguales, si el primer nombre es menor
	//que el segundo dado su contenido. 
	definir nombre1,nombre2 como caracter
	escribir "ingrese el primer nombre:"
	leer nombre1
	escribir "ingrese el segundo nombre:"
	leer nombre2
	si nombre1 = nombre2
		escribir "el nombre ",nombre1,"y",nombre2,"son iguales gg"
	sino 
		si nombre1 < nombre2
			escribir "el ",nombre1," es menor a ",nombre2
		sino 
			escribir "el 1mer nombre es mayor al 2do nombre"
		FinSi
	FinSi
	
FinFuncion
