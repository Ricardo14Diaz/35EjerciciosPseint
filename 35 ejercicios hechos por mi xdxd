	definir zona como caracter
	costo=0
	escribir "ingrese el peso del paquete en kg"
	leer peso
	si peso > 5
		escribir "ingrese el destino"
		leer zona
		si zona = "america del norte"
			costo = costo + 11.00
			escribir "el costo para america del norte es de: ",costo,"$"
		sino 
			si zona = "america central"
				costo = costo + 10.00
				escribir "el costo para america central es de: ",costo,"$"
			sino 
				si zona = "america del sur"
					costo = costo + 12.00
					escribir "el costo para america del sur es de: ",costo,"$"
				sino 
					si zona = "europa"
						costo = costo + 24.00
						escribir "el costo para europa es de: ",costo,"$"
					sino 
						si zona = "asia"
							costo = costo + 27
							escribir "el costo para asia es de: ",costo,"$"
						finsi
					finsi
				finsi
			finsi
		finsi	
	sino
		escribir "el preso del paquete es menor a 5kg"
	finsi
FinFuncion

